---
import { Image } from 'astro:assets';
import AmyBabyZName from '../assets/amybabyz_name.svg?raw';
---
<header>
    <Fragment set:html={AmyBabyZName} />
</header>

<style>
    header {
        width: 80%;
        margin: 2em auto;
    }
    @media (min-width: 1000px) {
        header {
            width: 60%;
        }
    }
</style>

<style is:inline>
    svg {
        fill: var(--primary);
    }
</style>