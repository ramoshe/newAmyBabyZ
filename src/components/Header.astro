---
import { Image } from 'astro:assets';
import AmyName from '../assets/amyname.png';
---
<header>
    <Image src={AmyName} alt="AmyBabyZ" class="nameimg" />
</header>

<style>
    header {
        width: 70%;
        margin: 2em auto;
    }
    .nameimg {
        width: 100%;
        height: auto;
    }
    @media (min-width: 1000px) {
        header {
            width: 50%;
        }
    }
</style>