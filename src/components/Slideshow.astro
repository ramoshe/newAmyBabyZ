---
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';
import { urlFor } from "../utils/image";

import { getImages } from '../utils/sanity';
const images : any = await getImages();
// console.log(urlFor(images[0].images[0]).width(300).url());
---
<div class="slideshow-container">
    <Icon name="mdi:chevron-left" class="arrow" onclick="plusSlides(-1)" />
    <div class="images-container">
        {images ? images[0].images.map((image : any) =>
        <div class="mySlides fade">
            <Image
                src={urlFor(image).width(300).height(300).url()}
                alt='AmyBabyZ Portrait'
                width={300}
                height={300} />
        </div>
        ) : null }
    </div>
    <Icon name="mdi:chevron-right" class="arrow" onclick="plusSlides(1)" />
</div>

<style>
    .slideshow-container {
        width: 80%;
        margin: 0 auto;
        margin-bottom: 10vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    /* images container */
    .images-container {
        max-width: 1000px;
        position: relative;
        margin: auto;
    }

    /* Hide the images by default */
    .mySlides {
        display: none;
    }

    /* Next & previous buttons */
    .arrow {
        cursor: pointer;
        color: var(--accent);
        height: 70px;
        width: 70px;
        transition: 0.6s ease;
        user-select: none;
    }

    /* Fading animation */
    .fade {
        animation-name: fade;
        animation-duration: 1.5s;
    }

    @keyframes fade {
        from {opacity: .4}
        to {opacity: 1}
    }
</style>

<script is:inline>
    let slideIndex = 1;
    showSlides(slideIndex);

    // Next/previous controls
    function plusSlides(n) {
        showSlides(slideIndex += n);
    }

    function showSlides(n) {
        let i;
        let slides = document.getElementsByClassName("mySlides");
        if (n > slides.length) {slideIndex = 1}
        if (n < 1) {slideIndex = slides.length}
        for (i = 0; i < slides.length; i++) {
            slides[i].style.display = "none";
        }
        slides[slideIndex-1].style.display = "block";
    }
</script>